@model Grad_Project.Models.File_tbl

<div class="margin_30_95" style="margin-left:30px;">
    <h2>Are you sure you want to delete this?</h2>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("File Name")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FileName)
            </dd>

            <dt>
                @Html.DisplayName("Upload On")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UploadOn)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> &ensp;
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success"})
            </div>
        }
    </div>
</div>

