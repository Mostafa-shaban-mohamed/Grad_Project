@model Grad_Project.Models.Course_tbl

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Course_tbl</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Course Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayName("Level")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ed_Level)
        </dd>

        <dt>
            @Html.DisplayName("Number of Documents")
        </dt>

        <dd>
            @if (Model.PDFs == null)
            {
                @Html.DisplayFor(model => model.PDFs)
            }
            else
            {
                @Html.ActionLink((Model.PDFs.Split('/').Count() - 1).ToString(), "Index", "File")
            }
            
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Links)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Links)
        </dd>

        <dt>
            @Html.DisplayName("Prof")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lecturer_tbl.Name)
        </dd>

        <dt>
            @Html.DisplayName("Assistant")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lecturer_tbl1.Name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
