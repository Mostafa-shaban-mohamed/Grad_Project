@model Grad_Project.Models.Lecturer_tbl

<div class="margin_30_95" style="margin-left:30px;">

    <h2>@Model.Name</h2>
    <div class="col-sm-6 col-md-6 col-lg-6">
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Role)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Role)
            </dd>
        </dl>
    </div>

    <div class="col-lg-6 col-md-6 col-sm-6">
        @if (Model.Image != null)
        {
            string imreBase64Data = Convert.ToBase64String(Model.Image);
            string imgDataURL = string.Format("data:image/png;base64,{0}", imreBase64Data);

            <img src="@imgDataURL" alt="Avatar" style="width:50%">
            <br />
            <br />
        }
        else
        {
            <img src="~/Content/Images/person.jpg" alt="Avatar" style="width:50%">
            <br />
            <br />
        }

    </div>

    <div>
        <button id="btnCP" class="btn btn-sees">Change Password</button> &ensp;
        @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-sees" }) &ensp;
        @Html.ActionLink("Delete This Account", "Delete", new { id = Model.ID }, new { @class = "btn btn-sees" }) &ensp;
        @Html.ActionLink("Courses", "Index", "Courses", new { @class = "btn btn-danger" })
    </div>

</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#btnCP').click(function () {
                location.href = '@Url.Action("ChangePassword", new { id = Model.ID })';
            });
        });
    </script>
}
